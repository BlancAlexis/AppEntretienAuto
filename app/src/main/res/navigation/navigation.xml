<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/LoginUserFragment">

    <fragment
        android:id="@+id/AddCarFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.AddCarFragment"
        android:label="MainActivity"/>
    <fragment
        android:id="@+id/AddUserFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.AddUserFragment"
        android:label="MainActivity"/>
    <fragment
        android:id="@+id/LoginUserFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.LoginUserFragment"
        android:label="MainActivity">
        <action
            android:id="@+id/action_LoginUserFragment_to_AddUserFragment"
            app:destination="@id/AddUserFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_LoginUserFragment_to_viewServicingFragment"
            app:destination="@id/viewServicingFragment" />
    </fragment>
    <fragment
        android:id="@+id/MapsFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.MapsFragment"
        android:label="MainActivity"/>
    <fragment
        android:id="@+id/viewServicingFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.ViewServicingFragment"
        android:label="fragment_view_servicing"
        tools:layout="@layout/fragment_view_servicing" >
        <action
            android:id="@+id/action_viewServicingFragment_to_MapsFragment"
            app:destination="@id/MapsFragment" />
        <action
            android:id="@+id/action_viewServicingFragment_to_placeholder"
            app:destination="@id/placeholder" />
        <action
            android:id="@+id/action_viewServicingFragment_to_addMaintenanceFragment"
            app:destination="@id/addMaintenanceFragment" />
    </fragment>
    <dialog
        android:id="@+id/addMaintenanceFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.AddMaintenanceFragment"
        android:label="fragment_add_maintenance_car"
        tools:layout="@layout/fragment_add_maintenance_car" />
    <fragment android:id="@+id/placeholder" >
        <action
            android:id="@+id/action_placeholder_to_AddCarFragment"
            app:destination="@id/AddCarFragment" />
    </fragment>

</navigation>