<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/LoginUserFragment">

    <fragment
        android:id="@+id/AddCarFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.AddCarFragment"
        android:label="MainActivity"/>
    <fragment
        android:id="@+id/AddUserFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.AddUserFragment"
        android:label="MainActivity"/>
    <fragment
        android:id="@+id/LoginUserFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.loginUserFragment"
        android:label="MainActivity">
        <action
            android:id="@+id/action_LoginUserFragment_to_AddUserFragment"
            app:destination="@id/AddUserFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_LoginUserFragment_to_MapsFragment"
            app:destination="@id/MapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/MapsFragment"
        android:name="com.example.manageyourcar.UIlayer.view.fragments.MapsFragment"
        android:label="MainActivity"/>

</navigation>